<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ServiceListActivity"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/activity_service_list_tv_device_name"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device Name:"/>
            <TextView
                android:id="@+id/activity_service_list_tv_device_address"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device Address:"/>
            <ToggleButton
                android:id="@+id/activity_service_list_tgbtn_data_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textOff="Current: Display Data in String Format"
                android:textOn="Current: Display Data in Hex Format"
                android:textAllCaps="false"/>
            <TextView
                android:id="@+id/activity_service_list_tv_char_data"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data:"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ExpandableListView
        android:id="@+id/activity_service_list_explv_service_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>